@using Shared.UI

@model List<ProductDto>

<h2 class="mb-3">Products</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Create New Product</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No products available.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
                <th>Sale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="ConfirmDelete"
                           asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm">
                            Delete
                        </a>




                    </td>
                    <td>
                        <button class="btn btn-success btn-sm"
                                onclick="openSaleModal('@item.Id', '@item.Type')">
                            Add to Sale
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- SALE MODAL -->
<div class="modal fade" id="saleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add to Sale</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="post"
                  asp-controller="@ViewBag.SaleController"
                  asp-action="Add">

                <div class="modal-body">
                    <input type="hidden" id="ProductId" name="Id" />
                    <input type="hidden" id="ProductType" name="Type" />

                    <!-- Quantity Field -->
                    <div class="mb-3">
                        <label class="form-label">Quantity</label>
                        <input type="number"
                               name="Quantity"
                               class="form-control"
                               min="1"
                               required />
                    </div>

                    <!-- Notes Field -->
                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea name="notes"
                                  id="ProductNotes"
                                  class="form-control"
                                  rows="3"
                                  placeholder="Enter notes for this sale..."></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Add to Sale</button>
                </div>
            </form>


        </div>
    </div>
</div>

<script>
        function openSaleModal(id, type) {
        // Set the hidden input values
        document.getElementById("ProductId").value = id;
        document.getElementById("ProductType").value = type;

        // Show the modal
        var modal = new bootstrap.Modal(document.getElementById('saleModal'));
        modal.show();
        }
    

</script>

