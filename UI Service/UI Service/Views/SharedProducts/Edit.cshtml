@using Shared.UI
@model UpdateProductDto

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label>Name</label>
        <input class="form-control" name="Name" value="@Model.Name" required />
    </div>

    <div class="mb-3">
        <label>Type</label>
        <input class="form-control" name="Type" value="@Model.Type" required />
    </div>

    <div class="mb-3">
        <label>Quantity</label>
        <input class="form-control" name="Quantity" type="number"
               value="@Model.Quantity" required />
    </div>
 
    <div class="mb-3">
        <label>Price</label>
        <input class="form-control" name="Price" type="number" step="0.01"
               value="@Model.Price" required />
    </div>


    <button class="btn btn-warning">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
