@{
    ViewData["Title"] = "Admin Verification";
}

<h2>Admin Verification</h2>

<form asp-action="VerifyAdmin" method="post">
    <input type="hidden" name="returnAction" value="@ViewBag.ReturnAction" />
    <input type="hidden" name="returnController" value="@ViewBag.ReturnController" />
    <input type="hidden" name="routeValue" value="@ViewBag.RouteValue" />

    <div class="form-group">
        <label>Admin Password</label>
        <input type="password" name="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-danger mt-2">Verify</button>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger mt-2">@ViewBag.Error</div>
    }
</form>
